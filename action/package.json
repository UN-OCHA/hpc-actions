{
  "name": "hpc-actions",
  "scripts": {
    "build": "tsc && ncc build lib/src",
    "check-formatting": "prettier -c \"./**/*.{ts,md,yml,json}\"",
    "check-types": "tsc --noEmit",
    "lint": "eslint --quiet --ext .ts ./",
    "prepare": "git config blame.ignoreRevsFile action/.git-blame-ignore-revs && cd .. && husky install action/.husky",
    "reinstall": "rm -rf node_modules/ && npm install",
    "test": "jest --projects test/jest.config.js --runInBand --verbose"
  },
  "engines": {
    "node": ">=16.15.0",
    "npm": ">=8.10.0"
  },
  "devDependencies": {
    "@octokit/webhooks-types": "^6.11.0",
    "@types/jest": "^28.1.7",
    "@types/node": "^18.7.6",
    "@unocha/hpc-repo-tools": "^1.2.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@octokit/rest": "^19.0.4",
    "fp-ts": "^2.12.2",
    "io-ts": "^2.2.17",
    "isomorphic-git": "^1.19.2"
  }
}
